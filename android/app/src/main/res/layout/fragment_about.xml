<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_gravity="center"
    android:gravity="center"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <androidx.cardview.widget.CardView
        app:cardBackgroundColor="#BC0000"
       android:layout_margin="20dp"
        android:layout_gravity="top"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/card_view"
        android:elevation="10dp"
        android:clickable="true"
        android:outlineAmbientShadowColor="#F44336"
        android:outlineSpotShadowColor="#F44336"
        app:cardCornerRadius="50dp"
        >
        <ScrollView
            android:scrollbars="none"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <LinearLayout
            android:layoutDirection="rtl"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >
            <TextView
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="فرش"
                android:textSize="60dp"
                android:textColor="#ffff"
                android:textAlignment="center"
                android:fontFamily="@font/mj_classic"
                ></TextView>
            <TextView
                android:layout_marginTop="20dp"
                android:layout_marginRight="15dp"
                android:layout_marginLeft="15dp"
                android:gravity="right"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:textColor="#ffff"
                android:fontFamily="@font/bnazanin"
                android:id="@+id/txv_about"
                ></TextView>
            <LinearLayout
                android:layout_marginBottom="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_btn_category"
                android:text="تماس با ما"
                android:id="@+id/about_phone"
                android:gravity="center"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:textColor="#fff"
                android:layout_marginLeft="10dp"
                android:textSize="15dp"/>

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_btn_category"
                    android:text="ارسال پیشنهاد"
                    android:id="@+id/about_offer"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="20dp"
                    android:textColor="#fff"
                    android:textSize="15dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_marginBottom="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">
                <ImageView
                    android:padding="10dp"
                    android:background="@drawable/bg_circle"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/ic_instagram"
                    android:id="@+id/about_insta"/>
                <ImageView
                    android:padding="10dp"
                    android:background="@drawable/bg_circle"
                    android:layout_marginRight="10dp"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/ic_telegram"
                    android:id="@+id/about_telgram"/>
                <ImageView
                    android:padding="10dp"
                    android:background="@drawable/bg_circle"
                    android:layout_marginRight="10dp"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/ic_whatsapp"
                    android:id="@+id/about_whatsapp"/>
                <ImageView
                    android:padding="10dp"
                    android:background="@drawable/bg_circle"
                    android:layout_marginRight="10dp"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/ic_website"
                    android:id="@+id/about_website"/>
                <ImageView
                    android:padding="10dp"
                    android:background="@drawable/bg_circle"
                    android:layout_marginRight="10dp"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/ic_twitter"
                    android:id="@+id/about_twitter"/>
            </LinearLayout>

        </LinearLayout>
        </ScrollView>
    </androidx.cardview.widget.CardView>
</LinearLayout>