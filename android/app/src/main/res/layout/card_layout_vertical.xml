<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
     android:layout_height="wrap_content"
     android:layout_width="match_parent"
    android:layout_gravity="center"
    android:gravity="center"
    >
    <!-- A CardView that contains a TextView -->
<androidx.cardview.widget.CardView
    android:foreground="@drawable/ripple"
    android:layout_gravity="center"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/card_view_list"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:clickable="true"
    android:layout_marginBottom="2dp"
    card_view:cardCornerRadius="20dp"
    android:outlineAmbientShadowColor="#F44336"
    android:outlineSpotShadowColor="#F44336"
    card_view:cardUseCompatPadding="true"
    >
<LinearLayout
    android:layoutDirection="rtl"
    android:gravity="left"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    >
    <ImageView

        android:id="@+id/img_cardview_list"
        android:layout_width="130dp"
        android:layout_height="140dp"
        android:layout_gravity="center"
        android:src="@color/cardview_shadow_start_color"
        android:tintMode="screen"
        android:scaleType="fitXY"
        android:adjustViewBounds="true"
        />
<LinearLayout
    android:gravity="left"
    android:layout_marginTop="10dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <TextView
        android:id="@+id/txv_title_cardview_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:fontFamily="@font/bnazanin"
        android:gravity="right"
        android:maxLines="2"
        android:text="نام فرش"
        android:textSize="20dp"
        android:textStyle="bold"></TextView>
    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="right"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="شانه : "/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="1dp"
            android:id="@+id/txv_shoulder_list"/>
        <TextView
            android:text="|سایز : "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="1dp"
            android:id="@+id/txv_size_list"/>
        <TextView
            android:text="|رنگ : "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="1dp"
            android:id="@+id/txv_color_list"/>

    </LinearLayout>
    <TextView
        android:textColor="#F44336"
        android:padding="2dp"
        android:id="@+id/txv_price_cardview_list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/bnazanin"
        android:gravity="bottom|right"
        android:text="قیمت فرش"
        android:textSize="20dp"
        android:textStyle="bold"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="7dp"
        android:layout_marginBottom="3dp"
        ></TextView>

</LinearLayout>
</LinearLayout>
</androidx.cardview.widget.CardView>
    </LinearLayout>
