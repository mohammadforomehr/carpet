<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
     android:layout_height="wrap_content"
     android:layout_width="wrap_content"
    android:layout_gravity="center"
    android:gravity="center"
    >
    <!-- A CardView that contains a TextView -->
<androidx.cardview.widget.CardView
    android:foreground="@drawable/ripple"
    android:layout_gravity="center"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/card_view_home"
    android:layout_marginLeft="1dp"
    android:layout_marginRight="5dp"
    android:clickable="true"
    android:outlineAmbientShadowColor="#F44336"
    android:outlineSpotShadowColor="#F44336"
    card_view:cardUseCompatPadding="true"
    android:layout_marginBottom="20dp"
    card_view:cardCornerRadius="20dp"
    >
<LinearLayout
    android:gravity="left"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
    <ImageView
        android:id="@+id/img_cardview"
        android:layout_width="160dp"
        android:layout_height="220dp"
        android:layout_gravity="center"
        android:src="@color/cardview_shadow_start_color"
        android:tintMode="screen"
        android:scaleType="fitXY"
        android:adjustViewBounds="true"
        />

    <TextView
        android:id="@+id/txv_title_cardview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:fontFamily="@font/b_roya"
        android:gravity="right"
        android:lines="2"
        android:maxLines="2"
        android:text="نام فرش"
        android:textSize="15dp"
        android:textStyle="bold"></TextView>
    <TextView
        android:textColor="#fff"
        android:padding="2dp"
        android:id="@+id/txv_price_cardview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/b_roya"
        android:gravity="left"
        android:text="قیمت فرش"
        android:textSize="12dp"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="7dp"
        android:layout_marginBottom="3dp"
        android:background="@drawable/bg_red_round"
        ></TextView>
</LinearLayout>
</androidx.cardview.widget.CardView>
    </LinearLayout>
